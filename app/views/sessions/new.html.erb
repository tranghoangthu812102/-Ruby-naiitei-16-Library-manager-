<% provide :title, t(".log_in") %>

<h1 class="text-center"><%= t ".log_in" %></h1>
<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, class: "font-weight-bold" %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t ".password", class: "font-weight-bold" %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.submit t(".log_in"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t "new_user?" %><%= link_to t("sign_up_now!"), signup_path %></p>
  </div>
</div>
