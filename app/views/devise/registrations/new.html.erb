<% provide :title, t("users.new.sign_up") %>

<h1 class="text-center"><%= t "users.new.sign_up" %></h1>
<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3 px-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label t("users.new.name"), class: "font-weight-bold" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "font-weight-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label t("users.new.password"), class: "font-weight-bold" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label t("users.new.password_confirmation"), class: "font-weight-bold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :avatar, class: "font-weight-bold" %>
        <span class="image">
          <%= f.file_field :image, accept: Settings.image_restricted_types %>
        </span>
      </div>
      <%= f.submit t("users.new.create_my_account"), class: "btn btn-primary align-center create_account_button" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


